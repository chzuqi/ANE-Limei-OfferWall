package com.limei.ane{	import flash.events.EventDispatcher;	import flash.events.StatusEvent;	import flash.external.ExtensionContext;
		/**	 * 力美积分墙	 * 	 * @author czq	 * 	 */		public class LimeiOfferWallExtension extends EventDispatcher	{				private static var _extContext:ExtensionContext;				private static var EXTENSION_ID:String = 'com.limei.extension';				//与java端中Map里的key一致		private static const LimeiBannerInit:String = "LimeiBannerInit";		private static const LimeiAdWallInit:String = "LimeiAdWallInit";		private static const LimeiInterstitialsInit:String = "LimeiInterstitialsInit";		private static const LimeiFullScreenInit:String = "LimeiFullScreenInit";				private static const LimeiReduceScore:String = "LimeiReduceScore";		private static const LimeiQueryScore:String = "LimeiQueryScore";				private static const LimeiShowBanner:String = "LimeiShowBanner";		private static const LimeiHideBanner:String = "LimeiHideBanner";		private static const LimeiShowAdWall:String = "LimeiShowAdWall";		private static const LimeiShowFullScreen:String = "LimeiShowFullScreen";		private static const LimeiShowInterstitials:String = "LimeiShowInterstitials";		public function LimeiOfferWallExtension()		{					}				private static var _instance:LimeiOfferWallExtension;				public static function getInstance():LimeiOfferWallExtension		{			if (!_instance)			{				_instance = new LimeiOfferWallExtension();				_extContext=ExtensionContext.createExtensionContext(EXTENSION_ID, null);				_extContext.addEventListener(StatusEvent.STATUS, onStatus);				if (!_extContext)				{					trace("extension.xml出错啦！！！！请对应上EXTENSION_ID是否与extenion.xml里的id想同");				}				else				{					trace(EXTENSION_ID, " extension creation complete");				}			}			return _instance;		}				private static function onStatus(e:StatusEvent):void		{			_instance.dispatchEvent(e);		}				/**		 * 广告栏初始化 		 * @param AdUnitId		 * 		 */				public static function BannerInit(AdUnitId:String):void		{			if (_extContext){				_extContext.call(LimeiBannerInit, AdUnitId);			}		}		/**		 * 积分墙初始化 		 * @param AdUnitId		 * 		 */				public static function AdWallInit(AdUnitId:String):void		{			if (_extContext){				_extContext.call(LimeiAdWallInit, AdUnitId);			}		}		/**		 * 插屏广告初始化 		 * @param AdUnitId		 * 		 */				public static function InterstitialsInit(AdUnitId:String):void		{			if (_extContext){				_extContext.call(LimeiInterstitialsInit, AdUnitId);			}		}		/**		 * 全屏广告初始化 		 * @param AdUnitId		 * 		 */				public static function FullScreenInit(AdUnitId:String):void		{			if (_extContext){				_extContext.call(LimeiFullScreenInit, AdUnitId);			}		}		/**		 * 扣除积分 		 * @param AdUnitId		 * @param score		 * 		 */				public static function ReduceScore(AdUnitId:String, score:int):void		{			if (_extContext){				_extContext.call(LimeiReduceScore, AdUnitId, score);			}		}		/**		 * 查询积分 		 * @param AdUnitId		 * 		 */				public static function QueryScore(AdUnitId:String):void		{			if (_extContext){				_extContext.call(LimeiQueryScore, AdUnitId);			}		}				public static function ShowBanner():void		{			if (_extContext){				_extContext.call(LimeiShowBanner);			}		}				public static function HideBanner():void		{			if (_extContext){				_extContext.call(LimeiHideBanner);			}		}				public static function ShowAdWall():void		{			if (_extContext){				_extContext.call(LimeiShowAdWall);			}		}				public static function ShowFullScreen():void		{			if (_extContext){				_extContext.call(LimeiShowFullScreen);			}		}				public static function ShowInterstitials():void		{			if (_extContext){				_extContext.call(LimeiShowInterstitials);			}		}	}}